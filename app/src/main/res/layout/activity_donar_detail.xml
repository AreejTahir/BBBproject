<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/b9"
    tools:context=".DonarDetail">

    <TextView
        android:layout_width="320dp"
        android:layout_height="41dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textSize="300dp"
        android:text="dfdsfdddddddsf"
        />
    <TextView
        android:id="@+id/n"
        android:layout_marginTop="200dp"

        android:background="@drawable/edit_round"
        android:layout_width="320dp"
        android:layout_height="41dp"
        android:layout_marginLeft="50dp"
        android:paddingLeft="10dp"
        android:drawableLeft="@drawable/ic_person_black_24dp"
        android:drawablePadding="10dp"
        android:textAlignment="gravity"
        android:textSize="20dp"
        android:text="sdssdsd"/>

    <TextView
        android:id="@+id/b"

        android:background="@drawable/edit_round"

        android:layout_width="320dp"
        android:layout_height="41dp"
        android:layout_marginLeft="50dp"
        android:paddingLeft="10dp"
        android:drawableLeft="@drawable/ic_blood"
        android:drawablePadding="10dp"
        android:layout_below="@id/n"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:text="Blood group"/>


    <TextView
        android:id="@+id/c"

        android:background="@drawable/edit_round"
        android:layout_width="320dp"
        android:layout_height="41dp"
        android:layout_marginLeft="50dp"
        android:paddingLeft="10dp"
        android:drawableLeft="@drawable/ic_place"
        android:layout_marginTop="10dp"
        android:drawablePadding="10dp"
        android:layout_below="@id/b"

        android:textSize="20dp"
        android:text="city"/>

    <TextView
        android:id="@+id/co"

        android:background="@drawable/edit_round"
        android:layout_width="320dp"
        android:layout_height="41dp"
        android:layout_marginLeft="50dp"
        android:paddingLeft="10dp"
        android:drawableLeft="@drawable/ic_phone_black_24dp"
        android:layout_marginTop="10dp"
        android:drawablePadding="10dp"
        android:layout_below="@id/c"

        android:textSize="20dp"
        android:text="mobile"/>
    <Button
        android:layout_width="320dp"
        android:layout_height="41dp"
        android:layout_marginLeft="50dp"


        android:layout_marginTop="40dp"

        android:text="@string/request"
        android:background="@drawable/button_round"
        android:textColor="@color/white"
        android:onClick="call"
        android:layout_below="@id/co"/>
</RelativeLayout>
